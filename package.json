{
  "name": "llm-tools",
  "packageManager": "yarn@4.7.0",
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*"
  ],
  "scripts": {
    "build:server": "yarn workspaces foreach --recursive --topological-dev --from=cli-completions-server run build",
    "build:cli": "yarn workspaces foreach --recursive --topological-dev --from=@llm-tools/cli run build",
    "test": "yarn workspaces foreach --recursive --topological-dev --from='packages/apps/*' run test"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  },
  "$schema": "https://json.schemastore.org/package.json"
}
