{
  "name": "@llm-tools/clients",
  "version": "0.0.1",
  "main": "build/index.js",
  "scripts": {
    "lint": "yarn eslint \"{src,tests?}/**/*.ts\" --fix",
    "build": "yarn tsc --project tsconfig.build.json",
    "build:watch": "yarn run build --watch",
    "test": "yarn run test:_base '{src,test{,s}}/**/*.test.ts'",
    "test:debug": "yarn run test:_base --inspect '{src,test{,s}}/**/*.test.ts'",
    "test:_base": "node --experimental-test-coverage --test-coverage-include='src/**/*' --test-coverage-exclude='**/{*.test,types}.ts' --test-coverage-branches=80 --test-coverage-lines=80 --enable-source-maps --require ts-node/register --test"
  },
  "author": "Louis Brunet",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "$schema": "https://json.schemastore.org/package.json"
}
